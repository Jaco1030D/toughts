<div class="home-header">
    {{#if search}}
    <h1>Você esta pesquisando por <span>{{search}}</span> </h1>
    {{#if toughtsqty}}
        <p>Foram encontrados <span>{{toughtsqty}}</span> pensamentos </p>
    {{else}}
        <p>Não encontramos nenhuma correspondencia para sua busca por: {{toughtsqty}} </p>
    {{/if}}
    {{else}}
    <h1>Todos os pensamentos</h1>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Esta buscando algo?">
        <input type="submit" value="buscar" class="btn">
    </form>
    <div class="order-container">
        <span>Ordernar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit" ><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit" ><i class="bi bi-arrow-down"></i></button>
        </form>
    </div>
    <a href="/">Limpar</a>
</div>
<div class="toughts-container">
    {{#each toughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>por <span>{{this.User.name}}</span> </figcaption>
        </figure>
    {{/each}}
</div>