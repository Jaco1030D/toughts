<div class="tought-form-container">
    <a href="/tought/dashboard">Voltar</a>
    <h1>Editando pensamentos</h1>
    <form action="/tought/edit" method="post">
        <input type="hidden" name="id" value="{{tought.id}}">
        <div class="form-control">
            <label for="title">Pensamento</label>
            <input type="text" name="title" placeholder="Digite seu pensamento" value="{{tought.title}}" >

        </div>
        <input type="submit" value="Publicar">
    </form>
</div>